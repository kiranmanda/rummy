@import "includes/mixins";

ul.hamburger{
	border: 1px solid #CCC;
	list-style: none;
	margin: 0;
	padding: 3px;
	border-radius: 2px;
	width: 31px;
	height: 31px;
	background-color: #FFF;
	position: absolute;
	left: 20px;
	top: 20px;
	cursor: pointer;
}

ul.hamburger:hover {
	background-color: #F1F1F1;
}

ul.hamburger li {
	height: 5px;
	background-color: #000;
	margin: 4px;
	border-radius: 2px;
}

ul.menu {
	list-style: none;
	margin: 0;
	padding: 0;
	text-align: left;
	position: absolute;
	left: -150px;
	top: 0;
	height: 100%;
	background-color: #000;
	color: #FFF;
	width: 150px;
}

ul.menu li {
	padding: 15px 20px;
	border-bottom: 1px solid #444;
	font-size: 14px;
}

.menu-open ul.menu {
	left:0;
}

.menu-open ul.hamburger {
	left: 170px;
}

.menu-open #page {
	margin-left: 150px;
	width: 350px;
}

.menu-open #page, .menu-open ul.hamburger, .menu-open ul.menu{
	-webkit-transition: all 0.3s ease;
  	-moz-transition: all 0.3s ease;
  	transition: all 0.3s ease;
}

body {
	background: url(../images/pattern.png) repeat #000;
	font-family: 'Open Sans', sans-serif;
	margin: 0;
	padding: 0;
}

form{
	margin: 0;
	padding: 0;
}

footer{
	font-size: 0.7em;
	color:#999;
	text-align: center;
	padding: 10px;
}

a {
	color: #009B8E;
}

a:hover {
	text-decoration: none;
}

input {
	border:1px solid #CCC;
	padding: 10px;
	width: 100%;
	font-size: 14px;
}

label {
	display: block;
	margin-bottom: 10px;
}

#box {
	background-color: #FFF;
	border-radius:4px;
	margin: 40px auto;
	min-height: 500px;
	padding: 40px;
	text-align: center;
	width:350px;
	position: relative;
	overflow: hidden;
}

.page {
	display: none;
}

button {
	background-color: #333;
	border-radius:2px;
	border: 1px solid #000;
	color: #FFF;
	font-size: 14px;
	outline: none;
	padding: 15px;
	text-transform: uppercase;
	width:100%;
}

button[disabled="disabled"].disabled, button[disabled="disabled"].disabled:hover {
	background-color: #AAA;
	cursor: default;
}

button.remove, button.re-enter {
	background-color: #dc3847;
	font-size: 12px;
	margin: 5px;
	padding: 3px 5px;
	float: right;
	width: auto;
	text-transform: none;
}

button.re-enter {
	background-color: #333;
}

button.remove:hover {
	background-color: #ED4958;
}

button:hover {
	background-color: #000;
	cursor: pointer;
}

button:active {
	background-color: #333;
}

.back {
	font-size: 2em;
	line-height: 1em;
}

table {
	border-collapse: collapse;
}

th {
	background-color: #333;
	color: #FFF;
} 

td, th {
	padding: 10px;
	text-align: center;
}

table{
	margin: 20px auto;
}

form[name='scoreSettings'] > div {
	text-align: left;
	margin-bottom: 10px;
}

form[name='scoreSettings'] button {
	margin-top: 10px;
}

.error {
	visibility: hidden;
	color: #CC0000;
	font-size: 11px;
	line-height: 20px;
}


.fb-like{
	margin:20px 0;
	text-align: center;
}

ol {
	margin: 0 0 40px 0;
	padding: 0;
	list-style-position: inside;
}

ol li {
	text-align: left;
	line-height: 2em;
	padding: 10px 0;
	border-bottom: 1px solid #999;
}

#intro button{
	margin: 20px 0;
}

#rules {
	line-height: 1.5em;
	text-align: left;
}

#players input{
	margin-bottom: 20px;
}

.scoreCard .more{
	display: none;
}
.scoreCard .totalScore{
	float: right;
}
.scoreCard ol {
	list-style: none;
}
.scoreCard .name {
	display: inline-block;
	width: 100px;
	overflow: hidden;
}
.scoreCard .score{
	display: inline-block;
	width: 30px;
}

.scoreCard td {
	text-align: right;
}
.scoreCard .name {
	width: 65px;
	overflow: hidden;
	white-space: nowrap;
    text-overflow: ellipsis; 
    font-weight: 400;
}
.scoreCard .vertical{
	width: 100%;
}
.scoreCard .vertical .name{
	width: 40px;
}
.scoreCard .small {
	font-size: 11px;
}

.scoreCard .strike{
	text-decoration: line-through;
}

.scoreCard .tableBox{
	/*width: calc(100% - 130px);*/
	overflow: scroll;
	direction:rtl; 
	background-color: #EEE;
}

.scoreCard .tables {
	margin:20px 0;
	white-space: nowrap;
}

.scoreCard .tables table{
	margin: 0;
	padding: 0;
}

.scoreCard .tableBox table{
	direction:ltr; 	
}

.scoreCard table tr{
	height: 52px;
	overflow: hidden;
}

#roundScore input[type="number"] {
	margin-bottom: 20px;
}

@media (max-width: 432px) {
	h1 {
		font-size: 1.4em;
	}
  	#box {
    	border: 0 none;
    	margin: 0;
    	width: auto;
    	min-height: auto;
    	padding: 20px;
  	}
}